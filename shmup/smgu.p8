function drw_menu()
	cls(0)
	cprint("shoot my game up",
	t_y,7)
	if t_y==50 and t_blink<5 then
		cprint("press ❎ to get started",
	t_y+10,7)
	end	
end

function drw_game()
	cls(1)
	
end

function drw_over()
	cls(2)
	
end
