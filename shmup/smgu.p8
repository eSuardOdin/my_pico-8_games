--update functions

function upd_menu()
	--title animation--
	if t_y<50 then
		t_y+=1
	end
	if t_blink<8 then
		t_blink+=1
	else
		t_blink=0
	end
	
	--launching game--
	if btnp(❎)then
		_upd=upd_game
		_drw=drw_game
		set_menu() --reset
		set_game()
	end
end


function upd_game()
	if btnp(❎)then
		_upd=upd_over
		_drw=drw_over
	end
end

function upd_over()
		if btnp(❎)then
		_upd=upd_menu
		_drw=drw_menu
	end
end
