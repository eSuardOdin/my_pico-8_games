--functions
function make_player()
player={}
player.x=64
player.y=64
player.dy=0--vertical velocity
player.rise=1
player.fall=2
player.sprite=2
end

function draw_player()
cls()
spr(player.sprite,player.x,player.y)
end

function move_player()
player.sprite=2
player.dy-=0.1
player.y-=player.dy
if(btn(0))then
	player.x-=1
	player.sprite=4	
end
if(btn(1))then 
	player.x+=1
	player.sprite=3
end
if(btn(2))then 
	player.dy+=0.5
	player.sprite=1
	end

end
